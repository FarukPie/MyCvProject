@using MyCvProject.Models.Entity
@model List<TblAbout> 
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>About List</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Surname</th>
        <th>Adress</th>
        <th>Phone</th>
        <th>Mail</th>
        <th>Description</th>
        <th>ImgUrl</th>
        <th>Delete</th>
        <th>Update</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>

            <td>@item.ID</td>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.Adress</td>
            <td>@item.Phone</td>
            <td>@item.Mail</td>
            <td>@item.Description</td>
            <td>@item.ImgUrl</td>
            <td>
                <a href="/About/DeleteAbout/@item.ID" class="btn btn-danger btn-circle">
                    <i class="fas fa-trash"></i>
                </a>
            </td>
            <td>
                <a href="/About/GetAbout/@item.ID" class="btn btn-info btn-circle">
                    <i class="fas fa-info-circle"></i>
                </a>
            </td>

        </tr>
    }
</table>
<a href="/About/AddAbout" class="btn btn-primary">Add New About Section</a>


