@using MyCvProject.Models.Entity
@model List<TblAbout>
<section class="resume-section" id="about">
    <div class="resume-section-content">
        @foreach (var item in Model)
        {
        <h1 class="mb-0">
            @item.Name
            <span class="text-primary">@item.Surname</span>
        </h1>
        <div class="subheading mb-5">
          @item.Adress · @item.Phone ·
            <a href="mailto:@item.Mail">@item.Mail</a>
        </div>
        <p class="lead mb-5">@item.Description</p>
        <div class="social-icons">
            <a class="social-icon" href="https://www.linkedin.com/in/omer-faruk-atak-551025243/"><i class="fab fa-linkedin-in"></i></a>
            <a class="social-icon" href="https://github.com/FarukPie"><i class="fab fa-github"></i></a>
            <a class="social-icon" href="https://x.com/faruk_tier65556"><i class="fab fa-twitter"></i></a>
            <a class="social-icon" href="https://www.facebook.com/profile.php?id=100009381194345"><i class="fab fa-facebook-f"></i></a>
        </div>
        }
    </div>
</section>
