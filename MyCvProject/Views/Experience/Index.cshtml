@using MyCvProject.Models.Entity
@model List<TblExperience>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Experience List</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>SubTitle</th>
        <th>Date</th>
        <th>Description</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>

            <td>@item.ID</td>
            <td>@item.Title</td>
            <td>@item.SubTitle</td>
            <td>@item.Date</td>
            <td>@item.Description</td>
            <td>
                <a href="/Experience/DeleteExperience/@item.ID" class="btn btn-danger btn-circle">
                    <i class="fas fa-trash"></i>
                </a>
            </td>
            <td>
                <a href="/Experience/GetExperience/@item.ID" class="btn btn-info btn-circle">
                    <i class="fas fa-info-circle"></i>
                </a>
            </td>
            
        </tr>
    }
    </table>
<a href="/Experience/AddExperience" class="btn btn-primary" >Add New Experience</a>


